#!/bin/bash
#
#  $Header: /u/gcmpack/MITgcm/tools/build_options/Attic/linux_ia32_g77+mpi_itrda,v 1.6 2004/09/18 16:09:44 edhill Exp $
#  $Name:  $
#
# adapted to itrda.acesgrid.org

DEFINES='-DALLOW_USE_MPI -DALWAYS_USE_MPI -D_BYTESWAPIO -DWORDLENGTH=4'
CPP='/lib/cpp  -traditional -P'

FC='/usr/local/pkg/mpich-gm/mpich-1.2.6..13-gm/g77/bin/mpif77'
LINK='/usr/local/pkg/mpich-gm/mpich-1.2.6..13-gm/g77/bin/mpif77'
LIBS='-L/usr/local/pkg/mpich-gm/mpich-1.2.6..13-gm/g77/lib -lfmpich -lmpich'
INCLUDEDIRS='-I/usr/local/pkg/mpich-gm/mpich-1.2.6..13-gm/g77/include'

if test "x$IEEE" = x ; then
    #  No need for IEEE-754
    FFLAGS='-Wimplicit -Wunused -Wuninitialized'
    FOPTIM='-O3 -malign-double -funroll-loops'
else
    #  Try to follow IEEE-754
    FFLAGS='-Wimplicit -Wunused -ffloat-store'
    FOPTIM='-O0 -malign-double'
fi
NOOPTFLAGS='-O0'

# netcdf
LIBS="-lnetcdf"
